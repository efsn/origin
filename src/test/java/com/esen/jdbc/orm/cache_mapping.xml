<?xml version="1.0" encoding="UTF-8"?>
<mapping>
	<entity name="orm.CacheEntity" table="ES_CACHE_ENTITY" bean="com.esen.jdbc.orm.CacheEntity">
		<caches>
			<cache enable="true" idletime="20" maxsize="8" livetime="30"/>
		</caches>
		
		<properties>
			<property name="id" field="ID_"  nullable="false" unique="true" length="20" pk="true" />
			<property name="name" field="NAME_"  nullable="false" length="100" />
			<property name="price" field="PRICE_"  nullable="true" length="10" scale="2" />
			<property name="saleDay" field="SALEDAY_" />
			
			<!-- 扩展属性  -->
			<property name="ext_c1" field="EXT_C1"  nullable="true" type='C' length="100" />
			<property name="ext_c2" field="EXT_C2"  nullable="true" type='N' length="10" scale="2" />
			
		</properties>
		
		<indexes>
			<index name="INDEX_ID_NAME" fields="ID_, NAME_" unique="true"/>
		</indexes>
		
	</entity>
</mapping>